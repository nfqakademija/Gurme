{% extends "GurmeMainBundle:Default:index.html.twig" %}
{% block body %}

<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">

        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="{{ path('index') }}" class="navbar-brand">Gurme</a>
        </div>

        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li><a href="#">Pirmas</a></li>
                <li><a href="#">Antras</a></li>
            </ul>
        </div>

    </div>
</div>
<div class="container">
    <div class="content">
        <div class="text-center">
            <h1>{{ recipe.name }}</h1>
            <div>
            <img class="img-thumbnail" src="{{ asset( recipe.coverPhoto.url ) }}">
            </div>
            <h3>Ingredients</h3>
            <ul class="list-unstyled">
                {# cia turetu buti kazkas panasaus i foreach sakini #}
                {% for item in recipe.ingredient %}
                    <li>{{ item.amount | default("") }}
                        {{ item.unit.main | default("") }}
                        {{ item.ingredient.name | default("") }}
                        ( {{ item.note | default("")}} )</li>
                {% endfor %}
            </ul>

            <h3>Darbo eiga</h3>
                {{ recipe.directions }}
        </div>
    </div>
</div>

{% endblock %}