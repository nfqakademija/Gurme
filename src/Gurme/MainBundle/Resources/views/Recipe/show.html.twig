{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Recipe</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Directions</th>
                <td>{{ entity.directions }}</td>
            </tr>
            <tr>
                <th>Preptime</th>
                <td>{% if entity.prepTime %}
                        {{ entity.prepTime|date('G \\h i \\m\\i\\n\\s') }}
                    {% endif %}</td>
            </tr>
            <tr>
                <th>Cooktime</th>
                <td>{% if entity.cookTime %}
                        {{ entity.cookTime|date('G \\h i \\m\\i\\n\\s') }}
                    {% endif %}</td>
            </tr>
            <tr>
                <th>Readytime</th>
                <td>{% if entity.readyTime %}
                        {{ entity.readyTime|date('G \\h i \\m\\i\\n\\s') }}
                    {% endif %}</td>
            </tr>
            <tr>
                <th>Calories</th>
                <td>{{ entity.calories }}</td>
            </tr>
            <tr>
                <th>Servings</th>
                <td>{{ entity.servings }}</td>
            </tr>
            <tr>
                <th>Approved</th>
                <td>{{ entity.approved }}</td>
            </tr>
            <tr>
                <th>Created At</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ entity.rating }}</td>
            </tr>
            <tr>
                <th>Private</th>
                <td>{{ entity.private }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('data_recipe') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('data_recipe_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
