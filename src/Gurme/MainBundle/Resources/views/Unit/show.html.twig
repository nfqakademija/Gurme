{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Unit</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Short</th>
                <td>{{ entity.short }}</td>
            </tr>
            <tr>
                <th>Long</th>
                <td>{{ entity.long }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('db') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('db_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
